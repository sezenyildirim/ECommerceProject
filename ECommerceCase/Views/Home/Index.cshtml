@model List<ECommerce.Entity.Entities.Product>;
@{
	ViewData["Title"] = "Home Page";
	var roles = TempData["roles"] as string[];

}
@if (roles != null)
{
	foreach (var role in roles)
	{
		<h2 class="alert alert-success text-center">@role</h2>

	}


}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<div class="row">
		@foreach (var product in Model)
		{
			<div class="col-md-4 mt-2">
				<div class="card" style="width: 18rem;">
					<img class="card-img-top" src="~/product.png" alt="Card image cap">
					<div class="card-body">
						<h5 class="card-title">@product.Name</h5>
						<a href="#" class="btn btn-primary">Add Basket</a>
					</div>
				</div>
			</div>
		}


	</div>
</div>
